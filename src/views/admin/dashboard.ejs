async function editStudent(studentId) {
    try {
        isEditMode = true;
        editingStudentId = studentId;

        // Show loading state
        Swal.fire({
            title: '<span class="text-xl font-semibold text-gray-700">Loading student data...</span>',
            html: '<p class="text-gray-500 mt-2">Please wait ‚è≥</p>',
            background: '#fff',
