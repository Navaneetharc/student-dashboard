            allowOutsideClick: false,
            customClass: {
                popup: 'rounded-2xl shadow-lg p-5 animate__animated animate__fadeIn animate__faster',
            },
            didOpen: () => Swal.showLoading(),
        });

        // Fetch student data
        const response = await fetch(`/admin/students/${studentId}`, {
            method: 'GET',
            credentials: 'include'
        });

        if (!response.ok) {
            throw new Error('Failed to fetch student data');
        }

        const data = await response.json();
        
        if (data.success && data.student) {
            const student = data.student;
            
            // Close loading
            Swal.close();
            
            // Open modal FIRST
            document.getElementById('addStudentModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
            
            // Update modal UI for edit mode
            document.getElementById('modal-title').textContent = 'Edit Student';
            document.getElementById('modal-subtitle').textContent = 'Update the student information below';
            document.getElementById('modal-submit-text').textContent = 'Update Student';
            document.getElementById('modal-student-id').value = studentId;

            // HIDE PASSWORD FIELD IN EDIT MODE
            const passwordField = document.getElementById('password').closest('div');
            if (passwordField) {
                passwordField.style.display = 'none';
                document.getElementById('password').removeAttribute('required');
            }
            
            // Populate form fields
            document.getElementById('fullName').value = student.fullName || '';
            document.getElementById('email').value = student.email || '';
            
            // Format date for input (YYYY-MM-DD)
            if (student.dob) {
                const date = new Date(student.dob);
                const formattedDate = date.toISOString().split('T')[0];
                document.getElementById('dob').value = formattedDate;
            }
            
            // Set gender radio button
            if (student.gender) {
                const genderRadio = document.querySelector(`input[name="gender"][value="${student.gender}"]`);
                if (genderRadio) {
                    genderRadio.checked = true;
                }
            }
            
            // Focus on first input
            setTimeout(() => {
                document.getElementById('fullName').focus();
            }, 100);
        } else {
            throw new Error(data.error || 'Failed to load student data');
        }
    } catch (error) {
        console.error('Error loading student:', error);
        Swal.fire({
            title: '<span class="text-2xl font-semibold text-red-600">Error!</span>',
            html: `<p class="text-gray-600 mt-2">${error.message || 'Could not load student data'}</p>`,
